{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "resolvePackageJsonExports": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["./index.d.ts"],
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
  ],
}